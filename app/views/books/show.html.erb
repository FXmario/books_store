<% provide(:title, @book.title) %>
<%= render 'books/sidebar' %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" data-turbo="false">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><%= @book.title %></h1> 
        <div class="btn-toolbar mb-2 mb-mb-0">
            <div class="btn-group me-2">
                <button id="dropdownAction1" type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Edit/Delete Book
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownAction1">
                    <li>
                        <%= link_to "Edit this book", edit_book_path(@book), class: "dropdown-item link-primary" %>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <%= button_to "Destroy this book", @book, method: :delete, class: "dropdown-item link-danger" %>
                    </li>
                </ul>
            </div>
        </div>
      </div>
      <div class="d-flex flex-wrap align-items-start justify-content-start justify-content-lg-start">
        <div class="me-auto p-2">
            <% flash.each do %>
                <p class="alert alert-success">
                    <%= notice %>
                </p>
            <% end %>
            <center>
                <h1>Synopsis</h1>
            </center>
            <%= @book.description %>
            <br>
            <br>

            <div class="d-flex bd-highlight">
                <table class="table table-hover table-stripped table-sm table-align-middle w-auto p-2 flex-fill bd-highlight">
                    <tr>
                        <th scope="col">Title</th>
                        <td><%= @book.title %></td>
                    </tr>
                    <tr>
                        <th scope="col">NOISBN</th>
                        <td><%= @book.noisbn %></td>
                    </tr>
                    <tr>
                        <th scope="col">Writer</th>
                        <td><%= @book.writer %></td>
                    </tr>
                    <tr>
                        <th scope="col">Publisher</th>
                        <td><%= @book.publisher %></td>
                    </tr>
                    <tr>
                        <th scope="col">Year</th>
                        <td><%= @book.year %></td>
                    </tr>
                    <tr>
                        <th scope="col">Price</th>
                        <td>Rp. <%= @book.price %></td>
                    </tr>
                    <tr>
                        <th scope="col">Selling Price</th>
                        <td>Rp. <%= @book.selling_price %></td>
                    </tr>
                    <tr>
                        <th scope="col">PPN</th>
                        <td><%= @book.ppn %></td>
                    </tr>
                    <tr>
                        <th scope="col">Discount</th>
                        <td><%= @book.discount %></td>
                    </tr>
            </table>
            <%= image_tag @book.cover, width: "300", class: "img-fluid col-md-4 ms-auto" if @book.cover.attached? %>
            </div>
        </div>
    </div>
</main>
  </div>
</div>