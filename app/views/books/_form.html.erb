<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red" class="alert alert-danger">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, style: "display: block", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cover, style: "display: block", class: "form-label" %>
    <%= form.file_field :cover, accept: "image/jpeg,image/png,image/gif", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :noisbn, style: "display: block", class: "form-label" %>
    <%= form.number_field :noisbn, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :writer, style: "display: block", class: "form-label" %>
    <%= form.text_field :writer, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: "display: block", class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :publisher, style: "display: block", class: "form-label" %>
    <%= form.text_field :publisher, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :year, style: "display: block", class: "form-label" %>
    <%= form.select :year, (Date.today.year - 20)..(Date.today.year + 10),{} , { class: "form-select" }  %>
  </div>

  <div class="mb-3">
    <%= form.label :stock, style: "display: block", class: "form-label" %>
    <%= form.number_field :stock, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, style: "display: block", class: "form-label" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :selling_price, style: "display: block", class: "form-label" %>
    <%= form.number_field :selling_price, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :ppn, style: "display: block", class: "form-label" %>
    <%= form.text_field :ppn, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :discount, style: "display: block", class: "form-label" %>
    <%= form.text_field :discount, class: "form-control" %>
  </div>

  <div class="mb-3 d-grid gap-1" data-turbo="false">
    <%= form.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>
