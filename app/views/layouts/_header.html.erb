<header class="p-0 mb-1 border-bottom bg-primary text-white sticky-top">
  <div class="container" data-turbo="false">
    <div class="d-flex flex-wrap align-items-start justify-content-start justify-content-lg-start">

      <div class="me-auto p-2 bd-highlight">
        <strong>
         <%= link_to "Books Store", root_path, class: "nav-link px-0 link-light" %>
        </strong>
      </div>

      <nav class="navbar navbar-expand-md navbar-dark bg-primary col-md-1 ms-auto">
        <ul class="nav navbar-nav">

          <% if logged_in? %>

          <li class="dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false" data-turbo="false">
              Account
            </a>
                      
            <ul class="dropdown-menu bg-light" aria-labelledby="dropdownUser1">
              <li>
                <%= link_to "Profile", current_cashier, class: "dropdown-item link-primary" %>
              </li>
              <li>
                <%= link_to "Settings", '#', class: "dropdown-item link-primary" %>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li>
                <%= button_to "Log out", logout_path, method: "delete", class: "dropdown-item link-primary" %>
              </li>
            </ul>
          </li>
        </ul>
        <% end %>
        <div class="navbar-header">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
       </div>
  </nav>
</div>
</div>
</header>